{
    "name": "broforce/slim-skeleton",
    "description": "An Example Webservice based on the slim/slim-skeleton",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Johannsen",
            "email": "jonas.johannsen@haw-mailer.de"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.1.1",
        "slim/flash": "0.2.0",
        "phpmailer/phpmailer": "~5.2",
        "monolog/monolog": "^1.17",
        "illuminate/database": "5.2",
        "respect/validation": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload":{
        "psr-4  ": {
            "Broforce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Source\\": "src/",
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
	}

}

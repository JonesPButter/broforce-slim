{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Change your Password</div>
                <div class="panel-body">
                    <form action="{{ path_for('changePW.post') }}" method="post">
                        <div class="form-group {{ errors.password_old ? 'has-error' : '' }}">
                            <label for="password_old">(Old) Password</label>
                            <input type="password" name="password_old" id="password_old" class="form-control">
                            {% if errors.password_old %}
                                <span class="help-block">{{ errors.password_old | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password_new ? 'has-error' : '' }}">
                            <label for="password_new">(New) Password</label>
                            <input type="password" name="password_new" id="password_new" class="form-control">
                            {% if errors.password_new %}
                                <span class="help-block">{{ errors.password_new | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
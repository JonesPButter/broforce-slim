{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Change {{ user.getUsername }} Data</div>
                <div class="panel-body">
                    <form action="{{ path_for('changeData.post',{'id':user.getId}) }}" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" value="{{ user.getName }}">
                        </div>
                        <div class="form-group">
                            <label for="familyName">Familyname</label>
                            <input type="text" name="familyName" id="familyName" class="form-control" value="{{ user.getFamilyname }}">
                        </div>
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" class="form-control" value="{{ user.getEmail }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <form action="{{ path_for('logUserIn.post') }}" method="post">
                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password_one">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Login!</button>
                    </form>
                </div>
                {% if messages %}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        {{ messages['RegisterForm'] | json_encode }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
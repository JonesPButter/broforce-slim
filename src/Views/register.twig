{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Register</div>
                <div class="panel-body">
                    <form action="{{ path_for('register.post') }}" method="post">
                        <div class="form-group">
                            <label for="name">Vorname</label>
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password_one">Password</label>
                            <input type="password" name="password_one" id="password_one" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password_two">Retype password</label>
                            <input type="password" name="password_two" id="password_two" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-default">Register me!</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
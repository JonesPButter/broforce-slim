{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Change the users password</div>
                <div class="panel-body">
                    <form action="{{ path_for('changePWForUser.post', {'id':id})}}" method="post">
                        <div class="form-group {{ errors.password_old ? 'has-error' : '' }}">
                            <label for="admin_pw">Admin Password</label>
                            <input type="password" name="admin_pw" id="admin_pw" class="form-control">
                            {% if errors.admin_pw %}
                                <span class="help-block">{{ errors.admin_pw | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password_new ? 'has-error' : '' }}">
                            <label for="password_new">(New) User Password</label>
                            <input type="password" name="user_pw" id="user_pw" class="form-control">
                            {% if errors.user_pw %}
                                <span class="help-block">{{ errors.user_pw | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}